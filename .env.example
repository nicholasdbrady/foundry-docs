# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://foundry-docs-mcp-search.search.windows.net
AZURE_SEARCH_API_KEY=
AZURE_SEARCH_INDEX_NAME=foundry-docs

# Azure AI Foundry Project endpoint + OpenAI v1 routes
# Example: https://<resource>.services.ai.azure.com/api/projects/<project-name>
# Selected: swdn-resource / foundry-project
AZURE_AI_PROJECT_ENDPOINT=https://swdn-resource.services.ai.azure.com/api/projects/foundry-project

# Optional key-based auth (if unset, DefaultAzureCredential is used)
AZURE_AI_PROJECT_API_KEY=

# Back-compat fallback key var accepted by scripts/server
AZURE_OPENAI_API_KEY=

# Deployment names
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-5.2

# Retry/backoff tuning (optional)
FOUNDRY_RETRY_MAX_ATTEMPTS=5
FOUNDRY_RETRY_BASE_DELAY_S=0.5
FOUNDRY_RETRY_MAX_DELAY_S=8.0
FOUNDRY_RETRY_JITTER_RATIO=0.2

# Throughput tuning (optional)
FOUNDRY_INGEST_MAX_CONCURRENCY=4
FOUNDRY_ADAPTIVE_THROTTLE_ENABLED=1
FOUNDRY_ADAPTIVE_THROTTLE_MAX_PAUSE_S=60

# Application Insights telemetry
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Optional docs location overrides
FOUNDRY_DOCS_DIR=
FOUNDRY_DOCS_JSON=
